@model QRT.Domain.ViewModel.m_viewerViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="main" role="main">
    <div id="ribbon">
        <ol class="breadcrumb">
            <li>Home</li>
            <li>Report Viewer</li>
        </ol>
    </div>
    <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
        <h1 class="page-title txt-color-blueDark">
            <i class="fa fa-lg fa-fw fa-map-marker"></i>
            Report Viewer
        </h1>
    </div>
    <div id="content">
        <section id="widget-grid" class="">
            <div class="row">
                <article class="col-sm-12 col-md-12 col-lg-12">
                    <div class="jarviswidget" id="wid-id-0" data-widget-colorbutton="false" data-widget-editbutton="false">
                        <div>
                            <div class="widget-body">
                                <form id="formSave" class="form-horizontal">
                                    <fieldset>
                                @if (Model.id != 0 && Model.first_name != null)
                                {
                                if (Model != null && Model.id == 0)
                                {
                                    <legend>Add New Report Viewer</legend>
                                }
                                else
                                {
                                    <legend>Edit Report Viewer</legend>
                                }
                                    <div class="form-group">
                                        <label class="col-md-2 control-label">ID</label>
                                        <div class="col-md-8">
                                            <label name="id" class="control-label">****</label>
                                            <input type="hidden" name="id" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-2 control-label">Username</label>
                                        <div class="col-md-8">
                                            <input class="form-control" name="username" placeholder="Default Text Field" type="text">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-2 control-label">Password</label>
                                        <div class="col-md-8">
                                            <input class="form-control" name="password" placeholder="Default Text Field" type="text">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-2 control-label">First Name</label>
                                        <div class="col-md-8">
                                            <input class="form-control" name="first_name" placeholder="Default Text Field" type="text">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-2 control-label">Last Name</label>
                                        <div class="col-md-8">
                                            <input class="form-control" name="last_name" placeholder="Default Text Field" type="text">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-2 control-label">Status</label>
                                        <div class="col-md-8">
                                            <label class="radio radio-inline">
                                                <input type="radio" id="statusOn" class="radiobox" checked value="On" name="status">
                                                <span>Active</span>
                                            </label>
                                            <label class="radio radio-inline">
                                                <input type="radio" id="statusOff" class="radiobox" value="Off" name="status">
                                                <span>Deactive</span>
                                            </label>
                                        </div>
                                    </div>
                                    <div class="form-actions">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <a href="\Viewer\Index" class="btn btn-default">
                                                    Cancel
                                                </a>
                                                <a class="btn btn-success" id="submit">
                                                    <i class="fa fa-save"></i>
                                                    Submit
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                }
                                else if (Model.id == 0 && Model.first_name == null)
                                {
                                if (Model != null && Model.id == 0)
                                {
                                    <legend>Add New Company</legend>
                                }
                                else
                                {
                                    <legend>Edit Company</legend>
                                }
                                    <div class="form-group">
                                        <label class="col-md-2 control-label">ID</label>
                                        <div class="col-md-8">
                                            <label name="id" class="control-label">****</label>
                                            <input type="hidden" name="id" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-2 control-label">Username</label>
                                        <div class="col-md-8">
                                            <input class="form-control" name="username" placeholder="Default Text Field" type="text">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-2 control-label">Password</label>
                                        <div class="col-md-8">
                                            <input class="form-control" name="password" placeholder="Default Text Field" type="text">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-2 control-label">First Name</label>
                                        <div class="col-md-8">
                                            <input class="form-control" name="first_name" placeholder="Default Text Field" type="text">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-2 control-label">Last Name</label>
                                        <div class="col-md-8">
                                            <input class="form-control" name="last_name" placeholder="Default Text Field" type="text">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-2 control-label">Status</label>
                                        <div class="col-md-8">
                                            <label class="radio radio-inline">
                                                <input type="radio" id="statusOn" class="radiobox" checked value="On" name="status">
                                                <span>Active</span>
                                            </label>
                                            <label class="radio radio-inline">
                                                <input type="radio" id="statusOff" class="radiobox" value="Off" name="status">
                                                <span>Deactive</span>
                                            </label>
                                        </div>
                                    </div>
                                    <div class="form-actions">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <a href="\Viewer\Index" class="btn btn-default">
                                                    Cancel
                                                </a>
                                                <a class="btn btn-success" id="submit">
                                                    <i class="fa fa-save"></i>
                                                    Submit
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="row">
                                        <div class="alert alert-warning fade in">
                                            <i class="fa-fw fa fa-warning"></i>
                                            <strong>Warning</strong>  ไม่สามารถเข้าถึงข้อมูลได้.
                                        </div>
                                        <div class="col-md-12">
                                            <a href="\Viewer\Index" class="btn btn-default">
                                                Back
                                            </a>
                                        </div>
                                    </div>
                                }

                                    </fieldset>
                                </form>
                            </div>
                        </div>
                    </div>
                </article>
            </div>
        </section>
    </div>
</div>

<div class="modal" id="popUpResult" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Infomation</h5>
            </div>
            <div class="modal-body">
                <p id="returnMsg"></p>
            </div>
            <div class="modal-footer">
                <a href="\Viewer\Index" class="btn btn-primary">Close</a>
            </div>
        </div>
    </div>
</div>
<div class="modal" id="popUpWarning" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Infomation</h5>
            </div>
            <div class="modal-body">
                <div id="returnMsgWarning"></div>
            </div>
            <div class="modal-footer">
                <button id="cancel" type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/scripts/custom/coreDetail.js"></script>
    <script type="text/javascript">
            if (@Model.id == 0) {
                $('[name="id"]').text('****');
            }else{
                $('[name="id"]').text('@Model.id');
                $('[name="id"]').val('@Model.id');
            }
            $('[name="first_name"]').val('@Model.first_name');
            $('[name="last_name"]').val('@Model.last_name');
            $('[name="username"]').val('@Model.username');
            $('[name="password"]').val('@Model.password');

            if('@Model.status' == 'On'){
                $('#statusOn').prop('checked',true);
                $('#statusOff').prop('checked',false);
            }
            if('@Model.status' == 'Off'){
                $('#statusOn').prop('checked',false);
                $('#statusOff').prop('checked',true);
            }

        $('#submit').click(function () {
            Save();
        });


        function Save() {
                $.ajax({
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    type: "POST",
                    url: '@Url.Action("Save", "Viewer")',
                    data: JSON.stringify({ model: $('#formSave').serializeObject() }),
                    success: function (xhr) {
                        if (xhr == "success") {
                            $('#returnMsg').text('Save successfully.');
                            $('#popUpResult').modal('show');
                        }
                        else {
                            $('#returnMsgWarning').html("");
                            $('#returnMsgWarning').append(xhr);
                            $('#popUpWarning').modal('show');
                        }

                    },
                    error: function (xhr) {
                        $('#returnMsgWarning').append(xhr);
                        $('#popUpWarning').modal('show');
                    }
                })
        }
       

        $('[title="viewer_"]').parent().addClass('active')
        $('[title!="viewer_"]').parent().removeClass('active')

        $('#md').click(function () {
            $('#popUpResult').modal('show')
        });

    </script>
}

