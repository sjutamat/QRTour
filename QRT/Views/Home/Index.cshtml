@model  QRT.Domain.ViewModel.dashboardViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="main" role="main">
    <!-- RIBBON -->
    <div id="ribbon">
        <!-- breadcrumb -->
        <ol class="breadcrumb">
            <li>Home</li>
            <li>Blank</li>
        </ol>
    </div>

    <div id="content">
        <div class="row">
            <section id="widget-grid" class="col-sm-12">
                <div class="row">
                    <article class="col-sm-12">
                        <div class="">
                            <form class="form-horizontal" style="margin-bottom:20px;" action="\Home\Index" method="post">
                                <div class="form-group">
                                    <label class="col-md-4 control-label">Date Start</label>
                                    <div class="col-md-4">
                                        <input id="datestart_filter" type="text" placeholder="Date Start" name="s_dashboard.date_start" class="form-control datepicker" data-dateformat="yy/mm/dd">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-4 control-label">Date End</label>
                                    <div class="col-md-4">
                                        <input id="dateend_filter" type="text" placeholder="Date End" name="s_dashboard.date_end" class="form-control datepicker" data-dateformat="yy/mm/dd">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-4 control-label">Route</label>
                                    <div class="col-md-4">
                                        <select class="form-control" name="s_dashboard.route" type="text">
                                            <option value="0">Please select</option>
                                            @if (Model.route != null)
                                            {
                                                for (int i = 0; i < Model.route.Count; i++)
                                                {
                                                    <option value="@Model.route[i].id">@Model.route[i].text</option>
                                                }
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12" style="text-align:center;">
                                        <button type="submit" class="btn btn-primary">
                                            <i class="fa fa-search"></i>
                                            Search
                                        </button>
                                        <button type="button" class="btn btn-defalt">
                                            <i class="fa fa-file-excel-o"></i>
                                            Export To Excel
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </article>




            <article class="col-sm-12">
                    @if (Model.reportList != null && Model.reportList.Any())
                    {
                        for (int i = 0; i < Model.reportList.Count; i++)
                        {
                            <div class="jarviswidget jarviswidget-color-darken" id="wid-id-@i" data-widget-colorbutton="false" data-widget-editbutton="false" data-widget-fullscreenbutton="false" data-widget-deletebutton="false">
                                <header>
                                    <strong style="font-size:18px; margin-left:8px;">@Model.reportList[i].name</strong>
                                </header>
                                <div>
                                    <div class="widget-body">
                                        @if (Model.reportList[i].answerList != null && Model.reportList[i].answerList.Any())
                        {
                <div class="widget-body-toolbar">
                    <div class="col-sm-12">
                        <div class="row">
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label><strong>Start Time :</strong></label>
                                    <label>@Model.reportList[i].start_time_string</label>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label><strong>End Time :</strong></label>
                                    <label>@Model.reportList[i].end_time_string</label>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label><strong>Staff name :</strong></label>
                                    <label>@Model.reportList[i].emp_name</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row col-sm-12">
                    <table id="dt_basic" class="table table-striped table-bordered table-hover" width="100%">
                        <thead>
                            <tr>
                                <th data-hide="phone">จุดตรวจ</th>
                                <th data-class="expand"><i class="fa fa-fw fa-bullhorn text-muted hidden-md hidden-sm hidden-xs"></i> เวลาที่บันทึก</th>
                                <th><i class="fa fa-fw fa-comments text-muted hidden-md hidden-sm hidden-xs"></i> สถานะ</th>
                                <th><i class="fa fa-fw fa-lightbulb-o text-muted hidden-md hidden-sm hidden-xs"></i>หมายเหตุ</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int a = 0; a < Model.reportList[i].answerList.Count; a++)
                            {
                                <tr>
                                    <td>@Model.reportList[i].answerList[a].location_name</td>
                                    <td>@Model.reportList[i].answerList[a].answer_cdate_string</td>
                                    <td>@Model.reportList[i].answerList[a].answer_flag</td>
                                    <td>@Model.reportList[i].answerList[a].answer_comment</td>
                                    <td></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                    }
                    else
                    {
                                    <p>
                                        <label>Not have any data.</label>
                                    </p>
                    }

                                            </div>
                                        </div>
                                    </div>
                    }

                    }
                    </article>
                </div>
            </section>
        </div>
    </div>



</div>
@section Scripts {
    <script src="~/scripts/js/smartwidgets/jarvis.widget.min.js"></script>
    <script type="text/javascript">

        $(document).ready(function () {

            pageSetUp();
            $('[title="blank_"]').parent().addClass('active')
            $('[title!="blank_"]').parent().removeClass('active')


            $('#dt_basic').dataTable({
                "sDom": "<'dt-toolbar'<'col-xs-12 col-sm-6'f><'col-sm-6 col-xs-12 hidden-xs'l>r>" +
                    "t" +
                    "<'dt-toolbar-footer'<'col-sm-6 col-xs-12 hidden-xs'i><'col-xs-12 col-sm-6'p>>",
                "autoWidth": true,
                "oLanguage": {
                    "sSearch": '<span class="input-group-addon"><i class="glyphicon glyphicon-search"></i></span>'
                },
                "preDrawCallback": function () {
                    if (!responsiveHelper_dt_basic) {
                        responsiveHelper_dt_basic = new ResponsiveDatatablesHelper($('#dt_basic'), breakpointDefinition);
                    }
                },
                "rowCallback": function (nRow) {
                    responsiveHelper_dt_basic.createExpandIcon(nRow);
                },
                "drawCallback": function (oSettings) {
                    responsiveHelper_dt_basic.respond();
                }
            });
        });
    </script>
}